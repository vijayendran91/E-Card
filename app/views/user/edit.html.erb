<div class='row'>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :user, url: user_path, method: :put do |f| %>
    <div class="form-group">
      <%= f.label :"user name" %>
      <%= f.text_field :user_name,class:'form-control',placeholder: @user.user_name%>
    </div>
    <div class="form-group">
      <%= f.label :"First Name" %>
      <%= f.text_field :fname ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Middle Name" %>
      <%= f.text_field :mname ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Last Name" %>
      <%= f.text_field :lname ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Email Address" %>
      <%= f.text_field :email ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Date of Birth" %>
      <%= f.text_field :dob ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Passport" %>
      <%= f.text_field :passport ,class:'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :"Aadhaar" %>
      <%= f.text_field :aadhaar ,class:'form-control'%>
    </div>
    <%= f.submit "Edit", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
